{
    "name": "webRequest Pandora",
    "description": "Capturing Pandora web requests with webRequest",
    "version": "0.0.1",

    "page_action": {
	"default_icon": {"19":"icon19.png"}
    },
    
    "background": {
    	"scripts": ["background.js"],
    	"persistent": true
    },
    
    "permissions": [
	"<all_urls>",
	"background",
	"tabs",
	"webRequest",
	"downloads"
    ],

    "content_scripts": [
	{ "matches": ["http://www.pandora.com/*"], "js": ["content_script.js"], "run_at":"document_end" }
    ],

    "manifest_version": 2
}
